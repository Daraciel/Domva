@model IEnumerable<domvaproject.fotos>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            Imagen
        </th>
        <th>
            Propiedad
        </th>
        <th>
            Principal?
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src= "@Url.Content("~/images/thumbs/"+item.Imagen)" alt="IMAGES" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.propiedades.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Principal)
        </td>
        <td>
            @Html.ActionLink("Borrar", "Delete", new { id= item.idFoto, propiedad= item.Propiedad })
        </td>
    </tr>
}

</table>
