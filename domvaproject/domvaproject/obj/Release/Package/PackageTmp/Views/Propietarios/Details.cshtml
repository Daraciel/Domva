@model domvaproject.propietarios

@{
    ViewBag.Title = "Details";
}

<h2>Detalles Propietario</h2>

<fieldset>
    <legend>Propietario</legend>

    <div class="display-label">idPropietario</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.idPropietario)
    </div>

    <div class="display-label">Nombre</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Nombre)
    </div>

    <div class="display-label">Telefono</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Telefono)
    </div>

    <div class="display-label">Email</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Email)
    </div>

    <div class="display-label">Localidad</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Localidad)
    </div>

    <div class="display-label">Direccion</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Direccion)
    </div>

    <div class="display-label">Descripcion</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Descripcion)
    </div>
    
    <div class="display-label">Propiedades</div>
    <div class="display-field">
        
    <table>
        
        <tr>
            <th>
                idPropiedad
            </th>
            <th>
                Nombre
            </th>
            <th>
                Precio
            </th>
        </tr>
    @foreach (var props in Model.propiedades)
    {
        <tr>
            <td>
                @Html.DisplayFor(Propiedades => props.idPropiedad)
            </td>
            <td>
                @Html.DisplayFor(Propiedades => props.Nombre)
            </td>
            <td>
                @Html.DisplayFor(Propiedades => props.Precio)
            </td>
            <td>
                @Html.ActionLink("Editar", "../Propiedades/Edit", new { id=props.idPropiedad }) |
                @Html.ActionLink("Detalles", "../Propiedades/Details", new { id=props.idPropiedad }) |
                @Html.ActionLink("Borrar", "../Propiedades/Delete", new { id=props.idPropiedad })
            </td>
        </tr>
    }
    </table>

    </div>


</fieldset>
<p>
    @Html.ActionLink("Editar", "Edit", new { /* id=Model.PrimaryKey */ }) |
    @Html.ActionLink("Atrás", "Index")
</p>
