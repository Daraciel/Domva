@model IEnumerable<domvaproject.usuarios>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
    @Html.ActionLink("Login", "Login")
</p>
<table>
    <tr>
        <th>
            Nombre
        </th>
        <th>
            Pass
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Pass)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Nombre }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.Nombre }) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.Nombre })
        </td>
    </tr>
}

</table>
