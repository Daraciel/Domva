@model domvaproject.propiedades

@{
    Layout = "~/Views/Shared/_LayoutPublic.cshtml";
}
<script type="text/javascript">
    var $jts = jQuery.noConflict();
    $jts(document).ready(function () {

        //Slider  
        $jts('#slideshow2').cycle({
            fx: 'scrollLeft,scrollDown,scrollRight,scrollUp',
            randomizeEffects: false,
            prev: '#prev',
            next: '#next'
        });
    });
</script>

	<div class="centercolumn">
			
		<div id="maincontent">
			<div id="content">
				<h2 class="underline">@Model.Nombre</h2>
                
			        <div id="slider_container2">
                    <div id="slideshow2">
                        
                        @{
                            foreach (var foto in Model.fotos)
                            {
                                <div class="cycle">
                                    <img src="@Url.Content("~/images/photo/" + foto.Imagen)" width="600" height="400"/>
                                </div>
                            }
                        }
                    </div>
			        <div id="slideshow_navigation2">
			            <div id="divpager">
                            <a href="#"><span id="prev">Prev</span></a> <a href="#"><span id="next">Next</span></a>
			            </div>
                    </div>
			</div>
			
			<h2 class="underline">Detalles de la propiedad</h2>
			<div id="property-detail">
			<div class="one_half">
				<ul class="box_text">
					<li><span class="left">Tipo	</span>			@Model.Categoria</li>
					<li><span class="left">Tamaño</span>			@Model.caracteristicas.Metros M²</li>
					<li><span class="left">Número de Baños</span>		@Model.caracteristicas.Baños</li>
				</ul>	
			</div>
			<div class="one_half last">
				<ul class="box_text">
					<li><span class="left">Precio</span>				@Model.Precio €</li>
					<li><span class="left">Dormitorios</span>	@Model.caracteristicas.Dormitorios</li>
					<li><span class="left">Distancia al Mar</span>			@Model.caracteristicas.DMar Metros</li>
				</ul>	
			</div>
				<ul class="box_text">
					<li>
                        <span class="left">Características</span>	
                    </li>
                    <li>
                        <div class="one_half">
				            <ul class="box_text">
					            <li><span class="left">Piscina</span>			@{if (Model.caracteristicas.Piscina)
                                                           {<img src="@Url.Content("~/images/public/icon1.png")" alt="Piscina" />}
                                                           else
                                                           {<img src="@Url.Content("~/images/public/list-cross.png")" alt="Piscina" />}} </li>
					            <li><span class="left">Aire Acondicionado</span>			@{if (Model.caracteristicas.AAcondicionado)
                                                                      {<img src="@Url.Content("~/images/public/icon1.png")" alt="Aire Acondicionado" />}
                                                                      else
                                                                      {<img src="@Url.Content("~/images/public/list-cross.png")" alt="Aire Acondicionado" />}} </li>
					            <li><span class="left">Ascensor</span>	@{if (Model.caracteristicas.Ascensor)
                                                          {<img src="@Url.Content("~/images/public/icon1.png")" alt="Ascensor" />}
                                                          else
                                                          {<img src="@Url.Content("~/images/public/list-cross.png")" alt="Ascensor" />}} </li>
					            <li><span class="left">Garage</span>	@{if (Model.caracteristicas.Garage)
                                                        {<img src="@Url.Content("~/images/public/icon1.png")" alt="Garage" />}
                                                        else
                                                        {<img src="@Url.Content("~/images/public/list-cross.png")" alt="Garage" />}} </li>
					            <li><span class="left">Jardin</span>	@{if (Model.caracteristicas.Jardin)
                                                        {<img src="@Url.Content("~/images/public/icon1.png")" alt="Jardin" />}
                                                        else
                                                        {<img src="@Url.Content("~/images/public/list-cross.png")" alt="Jardin" />}} </li>
					            <li><span class="left">Montaña</span>	@{if (Model.caracteristicas.Montana)
                                                         {<img src="@Url.Content("~/images/public/icon1.png")" alt="Montaña" />}
                                                         else
                                                         {<img src="@Url.Content("~/images/public/list-cross.png")" alt="Montaña" />}} </li>
					            <li><span class="left">Parque Infantil</span>	@{if (Model.caracteristicas.PInfantil)
                                                                 {<img src="@Url.Content("~/images/public/icon1.png")" alt="PInfantil" />}
                                                                 else
                                                                 {<img src="@Url.Content("~/images/public/list-cross.png")" alt="PInfantil" />}} </li>
				            </ul>	
			            </div>
			            <div class="one_half last">
				            <ul class="box_text">
					            <li><span class="left">Barbacoa</span>				@{if (Model.caracteristicas.Barbacoa)
                                                             {<img src="@Url.Content("~/images/public/icon1.png")" alt="Barbacoa" />}
                                                             else
                                                             {<img src="@Url.Content("~/images/public/list-cross.png")" alt="Barbacoa" />}} </li>
					            <li><span class="left">Calefaccion</span>	@{if (Model.caracteristicas.Calefaccion)
                                                             {<img src="@Url.Content("~/images/public/icon1.png")" alt="Calefaccion" />}
                                                             else
                                                             {<img src="@Url.Content("~/images/public/list-cross.png")" alt="Calefaccion" />}} </li>
					                <li><span class="left">Chimenea</span>			@{if (Model.caracteristicas.Chimenea)
                                                                {<img src="@Url.Content("~/images/public/icon1.png")" alt="Chimenea" />}
                                                                else
                                                                {<img src="@Url.Content("~/images/public/list-cross.png")" alt="Chimenea" />}} </li>
					            <li><span class="left">Terraza</span>	@{if (Model.caracteristicas.Terraza)
                                                         {<img src="@Url.Content("~/images/public/icon1.png")" alt="Terraza" />}
                                                         else
                                                         {<img src="@Url.Content("~/images/public/list-cross.png")" alt="Terraza" />}} </li>
					            <li><span class="left">Vistas al mar</span>	@{if (Model.caracteristicas.VMar)
                                                               {<img src="@Url.Content("~/images/public/icon1.png")" alt="VMar" />}
                                                               else
                                                               {<img src="@Url.Content("~/images/public/list-cross.png")" alt="VMar" />}} </li>
					            <li><span class="left">Zona Deportiva</span>	@{if (Model.caracteristicas.ZDeportiva)
                                                                {<img src="@Url.Content("~/images/public/icon1.png")" alt="ZDeportiva" />}
                                                                else
                                                                {<img src="@Url.Content("~/images/public/list-cross.png")" alt="ZDeportiva" />}} </li>
					            <li><span class="left">Vendida</span>	@{if (Model.caracteristicas.Vendida)
                                                         {<img src="@Url.Content("~/images/public/icon1.png")" alt="Vendida" />}
                                                         else
                                                         {<img src="@Url.Content("~/images/public/list-cross.png")" alt="Vendida" />}} </li>
				                </ul>	
			                </div>
                    </li>
                    <li><span class="left">Descripción</span> <span class="right">@Model.descripcionesesp.DescripcionESP</span></li>
				</ul>	
				</div>
				
			<div class="clear"><br /><br /></div>
			
